<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".activities.ProfileActivity">

    <TextView
        android:id="@+id/tvTittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PERFIL"
        android:textSize="36sp"
        android:textStyle="bold|italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTitleNameProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="64dp"
        android:text="Nombre:"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTittle" />

    <TextView
        android:id="@+id/tvSubNameProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvText"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitleSubNameProfile"
        app:layout_constraintStart_toEndOf="@+id/tvTitleSubNameProfile"
        app:layout_constraintTop_toTopOf="@+id/tvTitleSubNameProfile" />

    <TextView
        android:id="@+id/tvTitleSubNameProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Apellidos:"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="@+id/tvTitleNameProfile"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleNameProfile" />

    <TextView
        android:id="@+id/tvNameProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvText"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitleNameProfile"
        app:layout_constraintStart_toEndOf="@+id/tvTitleNameProfile"
        app:layout_constraintTop_toTopOf="@+id/tvTitleNameProfile" />

    <TextView
        android:id="@+id/tvTitleEmailProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Correo:"
        android:textSize="24sp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="@+id/tvTitleSubNameProfile"
        app:layout_constraintTop_toBottomOf="@+id/tvTitleSubNameProfile" />

    <TextView
        android:id="@+id/tvEmailProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tvText"
        android:textSize="24sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="@+id/tvTitleEmailProfile"
        app:layout_constraintStart_toEndOf="@+id/tvTitleEmailProfile"
        app:layout_constraintTop_toTopOf="@+id/tvTitleEmailProfile" />

</androidx.constraintlayout.widget.ConstraintLayout>