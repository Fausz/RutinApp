<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="20dp">

    <ImageView
        android:id="@+id/ivLogoRegister"
        android:layout_width="180dp"
        android:layout_height="0dp"
        android:layout_gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />


    <EditText
        android:id="@+id/etNameLogUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="8"
        android:hint="@string/registerName"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/ivLogoRegister"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/etSubNameLogUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="8"
        android:hint="@string/etSubNameLogUp"
        android:inputType="textPersonName"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/etNameLogUp"
        app:layout_constraintStart_toStartOf="@+id/etNameLogUp"
        app:layout_constraintTop_toBottomOf="@+id/etNameLogUp" />

    <EditText
        android:id="@+id/etEmailLogUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="8"
        android:hint="@string/registerEmail"
        android:inputType="textEmailAddress"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/etSubNameLogUp"
        app:layout_constraintStart_toStartOf="@+id/etSubNameLogUp"
        app:layout_constraintTop_toBottomOf="@+id/etSubNameLogUp" />

    <EditText
        android:id="@+id/etPassword1LogUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="8"
        android:hint="@string/registerPsswrd"
        android:inputType="textPassword"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/etEmailLogUp"
        app:layout_constraintStart_toStartOf="@+id/etEmailLogUp"
        app:layout_constraintTop_toBottomOf="@+id/etEmailLogUp" />

    <EditText
        android:id="@+id/etPassword2LogUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="8"
        android:hint="@string/etPassword2LogUp"
        android:inputType="textPassword"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/etPassword1LogUp"
        app:layout_constraintStart_toStartOf="@+id/etPassword1LogUp"
        app:layout_constraintTop_toBottomOf="@+id/etPassword1LogUp" />

    <Button
        android:id="@+id/btSignUp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:text="@string/registerSignUp"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/etPassword2LogUp"
        app:layout_constraintStart_toStartOf="@+id/etPassword2LogUp"
        app:layout_constraintTop_toBottomOf="@+id/etPassword2LogUp" />

    <Button
        android:id="@+id/btSignIn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark"
        android:text="@string/registerSignIn"
        app:layout_constraintEnd_toEndOf="@+id/btSignUp"
        app:layout_constraintStart_toStartOf="@+id/btSignUp"
        app:layout_constraintTop_toBottomOf="@+id/btSignUp" />


</androidx.constraintlayout.widget.ConstraintLayout>